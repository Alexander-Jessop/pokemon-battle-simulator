{
  "name": "pokemon-battle-simulator-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "A TypeScript-based backend for a Pokemon battle simulator, providing API endpoints for managing user accounts, simulating battles, and storing battle data in a MongoDB database using the Express framework.",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon dist/server.js",
    "dev": "tsc && node dist/server.js",
    "complie": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "connect-mongodb-session": "^3.1.1",
    "dotenv": "^16.0.3",
    "eslint-plugin-jest": "^27.2.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongodb": "^5.3.0",
    "mongoose": "^7.1.0"
  },
  "devDependencies": {
    "@types/connect-mongodb-session": "^2.4.4",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "TypeScript",
    "Backend",
    "Pokemon",
    "Battle simulator",
    "API endpoints",
    "User accounts",
    "Simulating battles",
    "MongoDB",
    "Express framework",
    "Database management",
    "RESTful API",
    "Node.js",
    "Web development",
    "Scalable architecture",
    "Modular design",
    "Test-driven development"
  ],
  "author": "Alexander Jessop",
  "license": "ISC"
}
